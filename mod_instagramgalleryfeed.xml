	<version>1.0.0</version>
	<description>MOD_INSTAGRAMFEED_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<files>
		<filename module="mod_instagramfeed">mod_instagramgalleryfeed.php</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
		<folder>img</folder>
		<filename module="mod_instagramfeed">helper.php</filename>
		<filename module="mod_instagramfeed">mod_instagramgalleryfeed.xml</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_instagramfeed.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_instagramfeed.sys.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_instagramfeed.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_instagramfeed.sys.ini</language>
		<language tag="ca-ES">ca-ES/ca-ES.mod_instagramfeed.ini</language>
		<language tag="ca-ES">ca-ES/ca-ES.mod_instagramfeed.sys.ini</language>
	</languages>
 
    <config>
		<fields name="params">
			<fieldset name="basic">
				<field name="opcionbusqueda" type="list" default="" required="true" label="MOD_INSTAGRAMFEED_OPCIONBUSQUEDA_LABEL" description="MOD_INSTAGRAMFEED_OPCIONBUSQUEDA_DESCRIPTION">
					<option value="0">MOD_INSTAGRAMFEED_OPCIONBUSQUEDA_OPTION1</option>
					<option value="1">MOD_INSTAGRAMFEED_OPCIONBUSQUEDA_OPTION2</option>
				</field>
				
				<field name = "userhashtag"
						type = "text"
						label = "MOD_INSTAGRAMFEED_USERHASHTAG_LABEL"
						description = "MOD_INSTAGRAMFEED_USERHASHTAG_DESCRIPTION"
						size = "50" >
				</field>
				<field
					type="list"
					name="columnas"
					default=""
					required="true"
					label="MOD_INSTAGRAMFEED_COLUMNAS_LABEL"
					description="MOD_INSTAGRAMFEED_COLUMNAS_DESCRIPTION"
				>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
					<option value="7">7</option>
					<option value="8">8</option>
					<option value="9">9</option>
					<option value="10">10</option>
					<option value="11">11</option>
					<option value="12">12</option>
				</field>
				<field
					type="list"
					name="filas"
					default=""
					required="true"
					label="MOD_INSTAGRAMFEED_FILAS_LABEL"
					description="MOD_INSTAGRAMFEED_FILAS_DESCRIPTION"
				>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
					<option value="7">7</option>
					<option value="8">8</option>
					<option value="9">9</option>
					<option value="10">10</option>
				</field>
 
			</fieldset>

		</fields>
	</config>
</extension>